# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Payment Configuration

# Stripe (Global - Tarjetas de crédito internacionales)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Mercado Pago (Latin America - Tarjeta, transferencia, efectivo)
# Get your token from: https://www.mercadopago.com/developers/panel
# 1. Log in to Mercado Pago developer panel
# 2. Go to: Your integrations > Production > Access token
MERCADO_PAGO_ACCESS_TOKEN=APP_USR_XXXXXXXXXXXXXXXX

# WhatsApp Configuration
WHATSAPP_BUSINESS_ACCOUNT_ID=your-account-id
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_TOKEN=your-webhook-token

# SAM Python API
SAM_API_URL=http://localhost:8000
SAM_API_KEY=your-api-key

# n8n Configuration
N8N_API_URL=https://n8n.your-domain.com
N8N_API_KEY=your-n8n-api-key

# LLM Configuration (Multi-provider with automatic fallback)
# Add at least ONE of these API keys to enable content generation
# Priority order: Gemini → OpenAI → DeepSeek → Anthropic → Perplexity

# Gemini (Google - RECOMMENDED for testing, free tier available)
# Get your key at: https://aistudio.google.com/app/apikey
LLM_API_KEY_GEMINI=your-gemini-key-here
# Alternative names also work:
# GOOGLE_API_KEY=your-gemini-key-here
# GEMINI_API_KEY=your-gemini-key-here

# OpenAI (GPT-4o-mini)
LLM_API_KEY_OPENAI=your-openai-key-here
# OPENAI_API_KEY=your-openai-key-here

# DeepSeek
LLM_API_KEY_DEEPSEEK=your-deepseek-key-here
# DEEPSEEK_API_KEY=your-deepseek-key-here

# Anthropic (Claude 3.5 Sonnet)
LLM_API_KEY_ANTHROPIC=your-anthropic-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here

# Perplexity (Llama 3.1 Sonar)
LLM_API_KEY_PERPLEXITY=your-perplexity-key-here
# PERPLEXITY_API_KEY=your-perplexity-key-here

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development
